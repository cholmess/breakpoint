{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DomainPromptSuite",
  "description": "Domain-specific prompt suite with metadata and optional telemetry",
  "type": "object",
  "required": ["suite_metadata", "prompts"],
  "properties": {
    "suite_metadata": {
      "type": "object",
      "required": ["use_case_description", "generated_at", "generation_method", "prompt_count"],
      "properties": {
        "use_case_description": {
          "type": "string",
          "description": "User-provided description of the use case"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "generation_method": {
          "type": "string",
          "enum": ["ai_openai", "template", "manual"],
          "description": "Method used to generate prompts"
        },
        "prompt_count": {
          "type": "number",
          "minimum": 1,
          "maximum": 200,
          "description": "Number of prompts in the suite"
        },
        "complexity": {
          "type": "string",
          "enum": ["simple", "moderate", "complex"],
          "description": "Complexity level of generated prompts"
        },
        "telemetry_method": {
          "type": "string",
          "enum": ["none", "estimated", "real", "hybrid"],
          "description": "Method used for telemetry data"
        }
      }
    },
    "prompts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PromptRecord"
      }
    },
    "telemetry": {
      "type": "array",
      "description": "Optional telemetry data for prompts",
      "items": {
        "$ref": "#/definitions/TelemetryRecord"
      }
    }
  },
  "definitions": {
    "PromptRecord": {
      "type": "object",
      "required": ["id", "family", "use_case", "prompt", "expects_tools", "expects_citations"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^p_[0-9]{3}$"
        },
        "family": {
          "type": "string",
          "enum": ["short", "long_context", "tool_heavy", "doc_grounded"]
        },
        "use_case": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "expects_tools": {
          "type": "boolean"
        },
        "expects_citations": {
          "type": "boolean"
        }
      }
    },
    "TelemetryRecord": {
      "type": "object",
      "required": [
        "prompt_id",
        "config_id",
        "prompt_tokens",
        "retrieved_tokens",
        "completion_tokens",
        "latency_ms",
        "tool_calls",
        "tool_timeouts",
        "timestamp"
      ],
      "properties": {
        "prompt_id": {
          "type": "string"
        },
        "config_id": {
          "type": "string"
        },
        "prompt_tokens": {
          "type": "number",
          "minimum": 0
        },
        "retrieved_tokens": {
          "type": "number",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "number",
          "minimum": 0
        },
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "tool_calls": {
          "type": "number",
          "minimum": 0
        },
        "tool_timeouts": {
          "type": "number",
          "minimum": 0
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "error": {
          "type": "string"
        }
      }
    }
  }
}
